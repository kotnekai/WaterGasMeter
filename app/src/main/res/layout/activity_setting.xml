<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_gray"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvLoginOut"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/anniu"
        android:gravity="center"
        android:text="@string/login_out"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/llModifyPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            style="@style/text_Item_style"
            android:text="@string/modify_password" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlVersionInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llModifyPwd"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            style="@style/text_Item_style"
            android:drawablePadding="10dp"
            android:text="@string/other_version_info" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llChangedLanguage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/rlVersionInfo"
        android:layout_marginTop="10dp">

        <TextView
            style="@style/text_Item_style"
            android:text="@string/modify_language" />

        <TextView
            android:id="@+id/tvLanguage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:text="简体中文"
            android:textColor="@color/text_color" />
    </RelativeLayout>


</RelativeLayout>