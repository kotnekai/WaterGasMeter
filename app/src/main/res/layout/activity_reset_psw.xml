<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.ResetPswActivity">
    <LinearLayout
        android:id="@+id/llPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/com_white_20r_shape"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/mima" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="密码"
            android:inputType="number"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llConfirmPsw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/llPassword"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/com_white_20r_shape"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/mima" />

        <EditText
            android:id="@+id/edtConfirmPsw"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="确认密码"
            android:inputType="number"
            android:textSize="17sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvPswTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llConfirmPsw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/register_info_psw_tip"
        android:textColor="@color/text_gray" />

    <TextView
        android:id="@+id/TvSubmitInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPswTip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@mipmap/anniu"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>