<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlPreSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            style="@style/text_Item_style"
            android:drawableStart="@mipmap/yucun"
            android:drawablePadding="10dp"
            android:text="@string/mine_per_storage_list" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlPayDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            style="@style/text_Item_style"
            android:drawableStart="@mipmap/jiaofei"
            android:drawablePadding="10dp"
            android:text="@string/mine_pay_list" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            style="@style/text_Item_style"
            android:drawableStart="@mipmap/jiaofei"
            android:drawablePadding="10dp"
            android:text="@string/mine_transaction_list" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlScanBill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            style="@style/text_Item_style"
            android:drawableStart="@mipmap/mine_scan"
            android:drawablePadding="10dp"
            android:text="@string/mine_scan_bill_info" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlPersonInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            style="@style/text_Item_style"
            android:drawableStart="@mipmap/ziliao"
            android:drawablePadding="10dp"
            android:text="@string/mine_person_info" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlOtherSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            style="@style/text_Item_style"
            android:drawableStart="@mipmap/shezhi"
            android:drawablePadding="10dp"
            android:text="@string/mine_other_setting" />
    </RelativeLayout>

</LinearLayout>